# ============================================================================
# AI-Native MVP - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@127.0.0.1:5433/ai_native

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# FastAPI Configuration
APP_NAME=AI-Native MVP V3
APP_VERSION=3.0.0
DEBUG=False  # Set to False in production
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration
JWT_SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# LLM Configuration (OpenAI) - Optional
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# LLM Configuration (Anthropic) - Optional
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# LLM Configuration (Ollama) - Optional
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# LLM Configuration (Mistral AI) - ACTIVE
# Get API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-small-latest
MISTRAL_TEMPERATURE=0.7
MISTRAL_MAX_TOKENS=2048
MISTRAL_TIMEOUT=60
MISTRAL_MAX_RETRIES=3

# LangSmith (Optional - Observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-key-here
LANGCHAIN_PROJECT=ai-native-mvp-v3

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=ai_native_rag

# File Upload Configuration
UPLOADS_DIR=/app/uploads

# Feature Flags
CODE_AUDITOR_ENABLED=true
SOCRATIC_TUTOR_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/backend.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
