# ============================================================================
# AI-Native MVP - PRODUCTION Environment Variables
# ============================================================================
# CRITICAL: This file contains EXAMPLES ONLY - DO NOT use these values!
# Generate secure values using the commands provided below
# DO NOT commit actual .env file to version control
# ============================================================================

# ==================== ENVIRONMENT ====================
ENVIRONMENT=production

# ==================== DATABASE ====================
# Use strong password (min 16 characters, mixed case, numbers, symbols)
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_SECURE_PASSWORD_HERE@your-db-host:5432/ai_native

# ==================== REDIS ====================
# Configure Redis with authentication
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@your-redis-host:6379/0

# ==================== APPLICATION ====================
APP_NAME=AI-Native Classroom
APP_VERSION=3.0.0
DEBUG=False  # MUST be False in production

# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_SECURE_KEY_HERE_64_CHARS_MINIMUM

# Comma-separated list of allowed origins (frontend URLs)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,app.yourdomain.com

# ==================== JWT CONFIGURATION ====================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=GENERATE_DIFFERENT_KEY_HERE_64_CHARS_MINIMUM
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30  # 30 minutes recommended for security
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== RATE LIMITING ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==================== LOGGING ====================
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# ==================== LLM PROVIDERS ====================
# Only include the provider you're using

# OpenAI (if using)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic (if using)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Mistral AI (if using)
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-small-latest
MISTRAL_TEMPERATURE=0.7
MISTRAL_MAX_TOKENS=2048
MISTRAL_TIMEOUT=60
MISTRAL_MAX_RETRIES=3

# Ollama (if using local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# ==================== VECTOR DATABASE ====================
CHROMA_HOST=your-chromadb-host
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=ai_native_rag

# ==================== FILE UPLOADS ====================
UPLOADS_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=10

# ==================== FEATURE FLAGS ====================
CODE_AUDITOR_ENABLED=true
SOCRATIC_TUTOR_ENABLED=true

# ==================== MONITORING (Optional) ====================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-key-here
LANGCHAIN_PROJECT=ai-native-mvp-v3

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn-here

# ==================== DATABASE CONNECTION POOL ====================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==================== SSL/TLS ====================
# Enable SSL for database connection
DB_SSL_MODE=require

# ==================== BACKUP ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ==================== EMAIL (Optional) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=AI-Native Classroom

# ==================== SECURITY NOTES ====================
# 1. Generate unique keys for SECRET_KEY and JWT_SECRET_KEY
# 2. Use different passwords for each service
# 3. Enable SSL/TLS for all external connections
# 4. Restrict database access to application servers only
# 5. Use environment-specific credentials
# 6. Rotate secrets regularly (every 90 days)
# 7. Store secrets in a secure vault (AWS Secrets Manager, Azure Key Vault, etc.)
# 8. Never commit .env files to version control
# 9. Use strong passwords (min 16 chars, mixed case, numbers, symbols)
# 10. Enable 2FA for all admin accounts
